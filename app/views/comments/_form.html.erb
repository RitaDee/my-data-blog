<%= form_with model: [current_user, @post, Comment.new], url: user_post_comments_path(user_id: current_user.id, post_id: @post.id) do |form| %>
  <div class="comment_form">
    <div>
      <%= form.label :comment %><br>
      <%= form.text_area :text, class: 'comment_input' %>
      <% form.object.errors.full_messages_for(:text).each do |message| %>
        <div class="error_message"><%= message %></div>
      <% end %>
    </div>
    <br>
    <%= form.submit 'Submit', class: 'post_button' %>
  </div>
<% end %>

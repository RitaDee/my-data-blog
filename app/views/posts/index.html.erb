<h1>Posts</h1>

<<%= render 'partials/user', user:@user%>
 <div class="post_list">
   <% @posts.each do |post| %>

      <%= render 'partials/post', post:post %>

     <% if  !five_most_recent_comments.empty?%>
         <div class ="post_comment">
     <%post.five_most_recent_comments.each do |comment| %>
          <%= render 'partials/comment', comment:comment %>
       <% end %>
        </div>
     <% end %>
   <% end %>
  </div>
<div class="button_holder">
<button>Pagination</button>
<button><%= link_to 'Back', :back %></button>
</div>